//1. Verificar se um número é divisível por 3 e 7.
var numero = Number ( prompt("digite um numero"));

if (numero%7==0 && numero%3==0){
alert("divisível por 3 e por 7");
}
else if ( numero%7!=0 && numero%3==0) {
alert("divisível por 3 e não por 7");
}

else if ( numero%7==0 && numero%3!=0) {
    alert("divisível por 7 e não por 3");
    }else{
alert("não é divisível nem por 3 e por 7 ")     
    }
